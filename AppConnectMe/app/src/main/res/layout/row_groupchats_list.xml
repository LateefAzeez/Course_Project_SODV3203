<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white_background"
    app:contentPadding="3dp"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_chat_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_group_icon"/>

        <TextView
            android:id="@+id/group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="Group Title"
            android:layout_toEndOf="@id/group_chat_icon"
            android:layout_toRightOf="@id/group_chat_icon"
            android:textSize="18dp"
            android:textColor="@color/blackTextColour"/>

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/group_chat_icon"
            android:layout_below="@id/group_title"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="Sender Name"
            android:textColor="@color/blackTextColour"
            android:layout_toRightOf="@id/group_chat_icon" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_title"
            android:layout_toEndOf="@+id/sender_name"
            android:layout_marginStart="5dp"
            android:text="message"
            android:textColor="#1219ed"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/sender_name"
            android:layout_marginLeft="5dp" />


        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="08:12 PM"
            android:textColor="#6266D8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>